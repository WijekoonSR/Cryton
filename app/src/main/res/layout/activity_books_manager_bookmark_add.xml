<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".books_manager_bookmarkAdd">

    <TextView
        android:id="@+id/lblAddBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Bookmark"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/lblBookName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/lblAddBookmark"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="55dp"
        android:text="Book Name : "
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/txtbookName"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblAddBookmark"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@+id/lblBookName"
        android:duplicateParentState="false"
        android:inputType="none"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/lblNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblBookName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="68dp"
        android:text="Note : "
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btnSubmit1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNote"
        android:layout_marginTop="133dp"
        android:width="10dp"
        android:height="20dp"
        android:text="Sumbit"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/txtNote"
        android:layout_width="181dp"
        android:layout_height="66dp"
        android:layout_below="@+id/txtbookName"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/lblNote"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNote"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="85dp"
        android:text="Update"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNote"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="77dp"
        android:layout_toRightOf="@+id/btnUpdate"
        android:text="Delete"
        android:textSize="20dp" />
</RelativeLayout>